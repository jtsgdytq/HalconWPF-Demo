<UserControl
    x:Class="_0722detetion.Views.FintMeasureView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:halcon="clr-namespace:HalconDotNet;assembly=HalconDotNet"
    xmlns:local="clr-namespace:_0722detetion.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.7*" />
            <ColumnDefinition Width="0.3*" />
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*" />
                <RowDefinition Height="0.9*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <TextBlock
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="20"
                Text="Fitting Measurement" />
            <Border
                Grid.Row="1"
                Margin="5"
                BorderBrush="Gray"
                BorderThickness="1">
                <halcon:HSmartWindowControlWPF x:Name="halconWindow" />
            </Border>
            <TextBlock x:Name="coodination" Grid.Row="2" Text="{Binding Move}" />
        </Grid>
        <Grid Grid.Column="1">
            <ListView
                x:Name="listView"
                Margin="5"
                ItemsSource="{Binding Infos}"
                ScrollViewer.VerticalScrollBarVisibility="Hidden">
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Name" />
                        <GridViewColumn DisplayMemberBinding="{Binding Value}" Header="Value" />
                    </GridView>
                </ListView.View>
            </ListView>

            <Button
                Margin="5"
                VerticalAlignment="Bottom"
                Command="{Binding StartCommand}"
                Content="Start" />
        </Grid>

    </Grid>
</UserControl>
