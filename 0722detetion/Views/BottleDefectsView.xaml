<UserControl
    x:Class="_0722detetion.Views.BottleDefectsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:halcon="clr-namespace:HalconDotNet;assembly=HalconDotNet"
    xmlns:local="clr-namespace:_0722detetion.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Cursor="">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.8*" />
            <ColumnDefinition Width="0.2*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="2">
            <Button
                x:Name="btnStart"
                MinHeight="40"
                Margin="10"
                Padding="10,5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Command="{Binding AutoStartCommand}"
                Content="自动检测"
                Cursor="Hand"
                FontSize="16" />

            <ToggleButton
                Cursor="Hand"
                IsChecked="{Binding IsAutoStart}"
                Style="{StaticResource MaterialDesignSwitchToggleButton}"
                ToolTip="MaterialDesignSwitchToggleButton with Custom Track Background">
                <materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                    <SolidColorBrush Color="Green" />
                </materialDesign:ToggleButtonAssist.SwitchTrackOnBackground>
                <materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
                    <SolidColorBrush />
                </materialDesign:ToggleButtonAssist.SwitchTrackOffBackground>
            </ToggleButton>

            <Button
                MinHeight="40"
                Margin="10"
                Padding="10,5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Content="下一张"
                Cursor="Hand"
                FontSize="16" />
        </StackPanel>




        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.1*" />
                <RowDefinition Height="0.9*" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="Bold"
                Text="Bottle Defects Detection" />
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="0.5*" />
                </Grid.ColumnDefinitions>
                <Border
                    Margin="5"
                    BorderBrush="Gray"
                    BorderThickness="1">
                    <halcon:HSmartWindowControlWPF
                        x:Name="hsmart_1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" />
                </Border>
                <Border
                    Grid.Column="1"
                    Margin="5"
                    BorderBrush="Gray"
                    BorderThickness="1">
                    <halcon:HSmartWindowControlWPF
                        x:Name="hsmart_2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch" />
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
