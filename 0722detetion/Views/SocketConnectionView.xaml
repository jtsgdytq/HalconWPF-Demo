<UserControl
    x:Class="_0722detetion.Views.SocketConnectionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:_0722detetion.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid>
            <Border
                Margin="5"
                BorderBrush="Gray"
                BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.1*" />
                        <RowDefinition Height="0.2*" />
                        <RowDefinition Height="0.7*" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="20"
                        Text="Socket Service" />

                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <TextBlock
                            Margin="5"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Text="IP:" />
                        <TextBox
                            Width="120"
                            Height="30"
                            Margin="5"
                            Text="{Binding ServiceIp}" />
                        <TextBlock
                            Margin="5"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Text="Port:" />
                        <TextBox
                            Width="120"
                            Height="30"
                            Margin="5"
                            Text="{Binding ServicePort}" />
                    </StackPanel>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.7*" />
                            <ColumnDefinition Width="0.3*" />
                        </Grid.ColumnDefinitions>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Border
                                Margin="2"
                                BorderBrush="LightBlue"
                                BorderThickness="1">
                                <TextBox
                                    x:Name="receivemessge"
                                    AcceptsReturn="True"
                                    IsReadOnly="True"
                                    Text="{Binding ServiceReceiveMessage}"
                                    VerticalScrollBarVisibility="Auto" />
                            </Border>
                            <Border
                                Grid.Row="1"
                                Margin="2"
                                BorderBrush="LightCoral"
                                BorderThickness="1">
                                <TextBox Text="{Binding ServiceSendMessage}" />
                            </Border>
                        </Grid>
                        <Grid Grid.Column="1">
                            <Button
                                Margin="5,10,5,0"
                                VerticalAlignment="Top"
                                Command="{Binding ServiceConnnectionCommand}"
                                Content="Connection" />
                            <Button
                                Margin="5"
                                VerticalAlignment="Bottom"
                                Command="{Binding ServiceSendCommand}"
                                Content="Send" />
                        </Grid>
                    </Grid>

                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Column="1">
            <Border
                Margin="5"
                BorderBrush="Gray"
                BorderThickness="1">
                <Border
                    Margin="5"
                    BorderBrush="Gray"
                    BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.1*" />
                            <RowDefinition Height="0.2*" />
                            <RowDefinition Height="0.7*" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="20"
                            Text="Socket Client" />

                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                FontSize="20"
                                Text="IP:" />
                            <TextBox
                                Width="120"
                                Height="30"
                                Margin="5"
                                Text="{Binding IP}" />
                            <TextBlock
                                Margin="5"
                                VerticalAlignment="Center"
                                FontSize="20"
                                Text="Port:" />
                            <TextBox
                                Width="120"
                                Height="30"
                                Margin="5"
                                Text="{Binding Port}" />
                        </StackPanel>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.7*" />
                                <ColumnDefinition Width="0.3*" />
                            </Grid.ColumnDefinitions>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Border
                                    Margin="2"
                                    BorderBrush="LightBlue"
                                    BorderThickness="1">
                                    <TextBox
                                        AcceptsReturn="True"
                                        IsReadOnly="True"
                                        VerticalScrollBarVisibility="Auto" />
                                </Border>
                                <Border
                                    Grid.Row="1"
                                    Margin="2"
                                    BorderBrush="LightCoral"
                                    BorderThickness="1">
                                    <RichTextBox />
                                </Border>
                            </Grid>
                            <Grid Grid.Column="1">
                                <Button
                                    Margin="5,10,5,0"
                                    VerticalAlignment="Top"
                                    Content="Connection" />
                                <Button
                                    Margin="5"
                                    VerticalAlignment="Bottom"
                                    Content="Send" />
                            </Grid>
                        </Grid>

                    </Grid>
                </Border>
            </Border>
        </Grid>


    </Grid>
</UserControl>
