<UserControl
    x:Class="_0722detetion.Views.ScarachDetectionView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:halcon="clr-namespace:HalconDotNet;assembly=HalconDotNet"
    xmlns:local="clr-namespace:_0722detetion.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.Column="0"
            HorizontalAlignment="Center"
            FontSize="20"
            Text="检测图片" />
        <TextBlock
            Grid.Row="0"
            Grid.Column="1"
            HorizontalAlignment="Center"
            FontSize="20"
            Text="检测结果" />
        <Border
            Grid.Row="1"
            Grid.Column="0"
            Margin="1"
            BorderBrush="Gray"
            BorderThickness="1" >
            <halcon:HSmartWindowControlWPF x:Name="halconimage" />
        </Border>
        <Border
            Grid.Row="1"
            Grid.Column="1"
            Margin="1"
            BorderBrush="Gray"
            BorderThickness="1">
            <halcon:HSmartWindowControlWPF x:Name="halconresult" />
        </Border>
        <Button
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Width="200"
            Command="{Binding RunCommnd}"
            Content="{Binding Operation}" />
    </Grid>
</UserControl>
